{
    "html-to-app": {
        "buildDirectory": "./build",
        "appDirectory": "./app",
        "url": "http://localhost:3000/",
        "useRelative": true,
        "importer": {
            "viewDirectory": "./mockup",
            "imageDirectory": "./mockup/images",
            "styleDirectory": "./mockup",
            "scriptDirectory": "./mockup/scripts",
            
            "layout": "layout",
            "ignore": [
                "styleguide.html"
            ],
            "styleType": "css",
            "scriptType": "js",
    
            "precmd": "",
            "postcmd": ""
    
        },
        "converter": {
            "layout": {
                "target": "document.documentElement.outerHTML",
                "remove": "",
                "prepend": "<!DOCTYPE html>",
                "append": "",
                "remap": []
            },
            "view": {
                "target": "document.body.innerHTML",
                "remove": "script",
                "prepend": "",
                "append": "",
                "remap": [],
                "inheritLayout": true
            },
    
            "precmd": "",
            "postcmd": ""
        },
        "builder": {
            "installCmd": "",
            "cleanupCmd": "",
    
            "precmd": "",
            "postcmd": ""
        },
        "exporter": {
			"viewDirectory": "./build/views",
			"imageDirectory": "./build/public/images",
			"styleDirectory": "./build/public/stylesheets",
			"scriptDirectory": "./build/public/javascripts",
            "viewExtension": ".hbs",
    
            "precmd": "",
            "postcmd": ""
        }
    }
}